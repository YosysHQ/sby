[tasks]
c
b
a

[cancelledby]
a: b
b: c
c: a

[options]
mode bmc
depth 10000
expect fail,cancelled

[engines]
btor btormc

[script]
a: read -define MAX=9600
b: read -define MAX=1267
c: read -define MAX=7200
read -formal demo.sv
prep -top demo

[file demo.sv]
module demo (
  input clk,
  output reg [31:0] counter
);
  initial counter = 0;

  always @(posedge clk) begin
    if (counter[31] == 1'b1)
      counter <= 0;
    else
      counter <= counter + 1;
  end

`ifdef FORMAL
  always @(posedge clk) begin
    assert (counter < `MAX);
  end
`endif
endmodule
